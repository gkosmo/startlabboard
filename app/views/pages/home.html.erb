<div class="container-fluid hp-header">
  <h1>Job Board</h1>
  <p>Find and manage here all your jobs and applications</p>
</div>

<div class="container-fluid home-main-links">
  <%= link_to "All job offers", job_offers_path, class: "btn btn-primary btn-home-links" %>
  <% if user_signed_in? %>
    <%= link_to "My applications", job_applications_path, class: "btn btn-primary btn-home-links" %>
    <%= link_to "My companies", companies_path, class: "btn btn-primary btn-home-links" %>
    <%= link_to "Create new Company", new_company_path, class: "btn btn-primary btn-home-links" %>
  <% end %>
</div>

<div class="container-fluid hp-last-offers">
  <div>
    <h2> Last Job Offers</h2>
  </div>
  <div>
    <% @job_offers_last.each do |job| %>
      <div class="hp-last-offers-offer">
        <div class="hp-offer-title">
          <%= link_to job.title, job_offer_path(job) %>
        </div>
        <div class="hp-offer-date">
          (<%= job.created_at.strftime("%d %b %Y") %>)
        </div>
      </div>
    <% end %>
  </div>
</div>
