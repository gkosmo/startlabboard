<%= simple_form_for ([@company, @job_offer]) do |f| %>
<%= f.input :company_name,
            label: "Company",
            autofocus: false,
            input_html: { autocomplete: "Company's name",
              class: 'form-control form-margin-btn',
              value: @company.name} %>
<%= f.input :category,
            label: "Category",
            input_html: { autocomplete: "Job's category",
              class: 'form-control form-margin-btn form-category'},
              collection: @job_category, prompt: "Select your job offer's category";
                %>
<%= f.input :title,
            label: "Title",
            input_html: { autocomplete: "Job offer's title",
              class: 'form-control form-margin-btn'} %>
<%= f.input :description,
            label: "Description",
            input_html: { autocomplete: "Job's description",
              class: 'form-control form-margin-btn'} %>
<%= f.input :start_date,
            label: "Start date",
            input_html: { autocomplete: "Job's start date",
              class: 'form-control form-margin-btn'} %>
<%= f.input :end_date,
            label: "End date",
            input_html: { autocomplete: "Job's end date",
              class: 'form-control form-margin-btn'} %>
<%= f.input :phone_number,
            label: "Phone Number",
            input_html: { autocomplete: "Contact phone number",
              class: 'form-control form-margin-btn'} %>
<%= f.input :email,
            label: "Email",
            input_html: { autocomplete: "Contact email",
              class: 'form-control form-margin-btn',
              value: current_user.email} %>
<%= f.input :address,
            label: "Address",
            input_html: { autocomplete: "Job's address",
              class: 'form-control form-margin-btn',
              id: 'searchTextField',
              value: @company.address} %>
<%= f.button :submit,
              "Publish",
              class: "btn btn-success" %>
<% end %>

<script>
  var input = document.getElementById('searchTextField');
  var options = {
    componentRestrictions: {country: 'be'}
  };

autocomplete = new google.maps.places.Autocomplete(input, options);
</script>
