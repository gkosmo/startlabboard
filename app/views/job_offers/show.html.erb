<%= link_to "back to all offers", job_offers_path %>
<h1> <%= @job_offer.title %></h1>
<div> <%= @job_offer.description %> </div>

<% if @job_offer.company.user == current_user %>
  <div> <%= link_to "Edit", edit_company_job_offer_path(@company, @job_offer) %> </div>
  <div> <%= link_to "Delete", company_job_offer_path(@company, @job_offer), method: :delete, data: {confirm: "Are you sure?"} %> </div>
<% else %>
  <div><%= link_to "Apply", new_job_offer_job_application_path(@job_offer) %> </div>
<% end %>


