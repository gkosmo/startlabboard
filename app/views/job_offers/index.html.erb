<h1>JobOffers#index</h1>
<p>Find me in app/views/job_offers/index.html.erb</p>
<%= link_to "Publish new job offer", new_job_offer_path %>
<% @job_offers.each do |job_offer| %>
<div class="card">
  <div><%= link_to job_offer.title, job_offer_path(job_offer) %></div>
  <div><%= job_offer.description %></div>
  <div>Job applications' count: <%= job_offer.job_applications.length %> </div>
  <div>
    <% job_offer.job_applications.each do |job_application| %>
    <div>Applicant first name: <%= job_application.first_name %> </div>
    <% end %>


  </div>
  <div><%= link_to "edit", edit_job_offer_path(job_offer) %></div>
  <div><%= link_to "delete", job_offer_path(job_offer), method: :delete, data: {confirm: "Are you sure?"} %></div>
</div>
<% end %>

